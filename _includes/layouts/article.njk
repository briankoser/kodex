---
layout: base
tags:
  - article
cssFiles:
  - article
---
<article class="article">
    <header>
        <h1>{{ title }}</h1>
        <span class="post-header">
            <span class="post-author">{{ authors | join(", ") }}</span>
            <span class="post-date">· {{ page.date | readableDate }}</span>
            {% if last_updated %}<span class="post-update-date">· Updated {{ last_updated | readableDate }}</span>{% endif %}
        </span>
    </header>

    {% if header_image -%}
        <img src="{{metadata.cdn_url}}{{ header_image }}" class="article-header-image" />
    {%- endif %}

    <div class="article-body">
        {{ content | safe }}
    </div>
</article>