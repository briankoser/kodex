---
layout: base
tags:
  - note
permalink: "notes/{{page.date | urlDate}}/"
---
{# todo: base from note shortcode, move metadata to sidebar #}
<article class="note">
    <header>
        <span class="post-header">
            <span class="post-author">{{ author }}</span>
            <span class="post-date">· {{ page.date | readableDate }}</span>
            {% if last_updated %}<span class="post-update-date">· Updated {{ last_updated | readableDate }}</span>{% endif %}
        </span>
    </header>

    <div class="note-body">
        {% if image -%}
          <img src="{{ metadata.cdn_url }}{{ metadata.notes_img_path }}{{ image }}">
        {%- endif %}
        
        {% if contentUrl -%}
          <a href="{{ contentUrl.url }}">{{ contentUrl.name or contentUrl.url }}</a>
        {%- endif %}
        
        {{ content | safe }}
    </div>
</article>