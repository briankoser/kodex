:root {
  {% for author in metadata.authors -%}
    --color-{{author | lower}}: {{ tokens['color' + author] }};

    {# bookshelf theme #}
    --color-{{author | lower}}-book-border: hsl(from var(--color-{{author | lower}}) h calc(s - 10) calc(l - 10));
  {%- endfor %}
}

{% for author in metadata.authors %}
  ul li:nth-of-type(5n + {{loop.index}})::marker {
    color: var(--color-{{author | lower}});
  }

  .{{author | lower}} a {
    text-decoration-color: var(--color-{{author | lower}});
  }

  .{{author | lower}} a:focus {
    color: var(--color-{{author | lower}});
  }

  .{{author | lower}} dl {
    border-left-color: var(--color-{{author | lower}});
  }

  .{{author | lower}} input {
    accent-color: var(--color-{{author | lower}});
  }

  .{{author | lower}} .stars {
    color: var(--color-{{author | lower}});
  }

  .{{author | lower}}-color {
    color: var(--color-{{author | lower}});
  }

  .card.{{author | lower}} {
    box-shadow: 0 var(--shadow-thickness) var(--color-{{author | lower}});
  }

  .bookshelf .book-{{author | lower}} {
    background-color: var(--color-{{author | lower}});
    border-left: 2px solid var(--color-{{author | lower}}-book-border);
    border-right: 2px solid var(--color-{{author | lower}}-book-border);
  }

  .bookshelf .book-{{author | lower}}::before {
      border-left-color: var(--color-{{author | lower}});
      border-right-color: var(--color-{{author | lower}});
  }

{% endfor %}

.dark h1 {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale; 
}